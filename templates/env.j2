### APP ###
APP_PORT={{ remna_app_port }}
METRICS_PORT={{ remna_metric_port }}


### API ###
# Possible values: max (start instances on all cores), number (start instances on number of cores), -1 (start instances on all cores - 1)
# !!! Do not set this value more that physical cores count in your machine !!!
API_INSTANCES={{ remna_instance_count }}

### DATABASE ###
# FORMAT: postgresql://{user}:{password}@{host}:{port}/{database}
DATABASE_URL={{ remna_db_url }}

### REDIS ###
REDIS_HOST={{ remna_redis_host }}
REDIS_PORT={{ remna_redis_port }}

### JWT ###
### CHANGE DEFAULT VALUES ###
JWT_AUTH_SECRET={{ remna_jwt_auth_secret }}
JWT_API_TOKENS_SECRET={{ remna_jvt_api_token_secret }}

### TELEGRAM ###
IS_TELEGRAM_ENABLED={{ remna_telegram_enabled }}
TELEGRAM_BOT_TOKEN={{ remna_telegram_token }}
TELEGRAM_ADMIN_ID={{ remna_telegram_admin }}
NODES_NOTIFY_CHAT_ID={{ remna_telegram_notify_chat }}

# Optional
# Only set if you want to use topics
TELEGRAM_ADMIN_THREAD_ID=
NODES_NOTIFY_THREAD_ID=

### FRONT_END ###
# Used by CORS, you can leave it as * or place your domain there
FRONT_END_DOMAIN=*

### SUBSCRIPTION PUBLIC DOMAIN ###
### DOMAIN, WITHOUT HTTP/HTTPS, DO NOT ADD / AT THE END ###
### Used in "profile-web-page-url" response header and in UI/API ###
### Review documentation: https://remna.st/installation/env#subscription-public-domain
{% if remna_sub_page %}
SUB_PUBLIC_DOMAIN={{ remna_sub_panel_domain }}
{% else %}
SUB_PUBLIC_DOMAIN={{ remna_domain }}/api/sub
{% endif %}


### If CUSTOM_SUB_PREFIX is set in @remnawave/subscription-page, append the same path to SUB_PUBLIC_DOMAIN. Example: SUB_PUBLIC_DOMAIN=sub-page.example.com/sub

### SWAGGER ###
SWAGGER_PATH=/docs
SCALAR_PATH=/scalar
IS_DOCS_ENABLED=false

### PROMETHEUS ###
### Metrics are available at /api/metrics
METRICS_USER=admin
METRICS_PASS=admin

### WEBHOOK ###
WEBHOOK_ENABLED={{remna_webhook_enabled}}
### Only https:// is allowed
WEBHOOK_URL={{ remna_webhook_url }}
### This secret is used to sign the webhook payload, must be exact 64 characters. Only a-z, 0-9, A-Z are allowed.
WEBHOOK_SECRET_HEADER={{ remna_webhook_secret }}

### CLOUDFLARE ###
# USED ONLY FOR docker-compose-prod-with-cf.yml
# NOT USED BY THE APP ITSELF
CLOUDFLARE_TOKEN=ey...


### HWID DEVICE DETECTION AND LIMITATION ###
# Don't enable this if you don't know what you are doing.
# Review documentation before enabling this feature.
# https://remna.st/features/hwid-device-limit/

HWID_DEVICE_LIMIT_ENABLED={{ remna_hwid_device_limit }}
{% if remna_hwid_device_limit == "true" %}
HWID_FALLBACK_DEVICE_LIMIT={{ remna_hwid_fallback_device_limit }}
HWID_MAX_DEVICES_ANNOUNCE={{ remna_hwid_announce }}
{% endif %}